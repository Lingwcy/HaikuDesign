{
    "compilerOptions": {
        "baseUrl": ".",  //告诉编译器：「解析非相对路径时，以项目根目录（tsconfig.json 所在文件夹）为『起点』去搜模块」
        "declaration": true,//编译时同步产出 .d.ts 声明文件.
        "strict": true, // 一次性打开 7 条“严格模式”子规则

        "module": "esnext", // 生成代码使用 ES 模块规范
        "moduleResolution": "bundler", // 采用类似于打包工具的模块解析策略
        "esModuleInterop": true, //允许你用 import foo from 'commonjs-pkg' 直接导入 CommonJS 库，不再写 * as foo

        "jsx": "react-jsx",
        
        "noUnusedParameters": true,
        "noImplicitAny": true,

        "target": "es2020",
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
    },
    "exclude": ["**/node_modules", "**/dist"]
}
